{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*", "./dist/*", ""]
    },

    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true, // Bật tất cả các kiểm tra nghiêm ngặt
    "noUnusedLocals": true, // Báo lỗi khi có biến cục bộ không sử dụng
    "noUnusedParameters": true, // Báo lỗi khi có tham số không sử dụng
    "noFallthroughCasesInSwitch": true, // Báo lỗi khi có case switch rơi qua case khác

    "noImplicitAny": false, // Báo lỗi khi kiểu dữ liệu "any" được sử dụng ngầm định
    "strictNullChecks": true, // Bắt buộc kiểm tra null
    "strictFunctionTypes": true, // Bắt buộc kiểm tra kiểu hàm nghiêm ngặt
    "strictPropertyInitialization": true, // Bắt buộc khởi tạo thuộc tính nghiêm ngặt
    "noImplicitThis": true, // Báo lỗi khi "this" không được khai báo kiểu
    "alwaysStrict": true, // Bật chế độ strict mode trong mọi file
    "forceConsistentCasingInFileNames": true, // Bắt buộc kiểm tra chữ hoa chữ thường trong tên file
    "noImplicitReturns": true // Báo lỗi khi có hàm không trả về giá trị
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
